// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid()) @map("_id")
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  ritualPrefs   RitualPreferences?
  addresses     Address[]
  reviews       Review[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Essence {
  id                String              @id @default(cuid()) @map("_id")
  folioNumber       String              @unique // Roman numerals: I, II, III...
  slug              String              @unique
  latinName         String
  commonName        String
  description       String              @db.Text
  longDescription   String?             @db.Text
  humour            HumourType
  rarity            RarityType
  season            SeasonType
  extractionMethod  String
  notes             String[]
  price             Decimal             @db.Decimal(10, 2)
  volumeMl          Int                 @default(5)
  stockQuantity     Int                 @default(0)
  isActive          Boolean             @default(true)
  isFeatured        Boolean             @default(false)
  batchNumber       String?
  harvestDate       DateTime?
  distillationDate  DateTime?
  distillationHours Int?
  terroir           String?
  altitude          Int? // meters above sea level
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  // Relations
  images            EssenceImage[]
  ritualMetadata    EssenceRitualMetadata?
  botanicalInfo     BotanicalInfo?
  orderItems        OrderItem[]
  alchemicalProcess AlchemicalProcess[]
  artisanNotes      ArtisanNote[]
  testimonials      Testimonial[]
  reviews           Review[]
  categories        EssenceCategory[]

  @@index([humour])
  @@index([rarity])
  @@index([season])
  @@index([price])
  @@index([createdAt])
  @@index([isActive])
  @@index([isFeatured])
  @@map("essences")
}

model EssenceImage {
  id        String   @id @default(cuid()) @map("_id")
  essenceId String
  url       String
  alt       String
  width     Int
  height    Int
  isPrimary Boolean  @default(false)
  order     Int      @default(0)
  createdAt DateTime @default(now())

  essence Essence @relation(fields: [essenceId], references: [id], onDelete: Cascade)

  @@index([essenceId])
  @@index([isPrimary])
  @@map("essence_images")
}

model EssenceRitualMetadata {
  id            String   @id @default(cuid()) @map("_id")
  essenceId     String   @unique
  hapticPattern String[] // Vibration patterns
  audioKey      String?  // Audio file reference
  visualEffect  String?  // Visual effect identifier
  scrollTrigger String?  // Scroll-based trigger
  colorPrimary  String?  // Primary ritual color
  colorSecondary String? // Secondary ritual color
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  essence Essence @relation(fields: [essenceId], references: [id], onDelete: Cascade)

  @@map("essence_ritual_metadata")
}

model BotanicalInfo {
  id           String @id @default(cuid()) @map("_id")
  essenceId    String @unique
  family       String
  genus        String
  species      String
  commonNames  String[]
  origin       String
  growingConditions String?
  harvestTime  String?
  plantPart    String // e.g., 'flowers', 'leaves', 'roots'
  conservationStatus String?
  sustainabilityNotes String?

  essence Essence @relation(fields: [essenceId], references: [id], onDelete: Cascade)

  @@map("botanical_info")
}

model Order {
  id                String         @id @default(cuid()) @map("_id")
  orderNumber       String         @unique
  userId            String?
  user              User?          @relation(fields: [userId], references: [id], onDelete: SetNull)
  sessionId         String?
  status            OrderStatus    @default(PENDING)
  subtotal          Decimal        @db.Decimal(10, 2)
  tax               Decimal        @db.Decimal(10, 2)
  shipping          Decimal        @db.Decimal(10, 2)
  total             Decimal        @db.Decimal(10, 2)
  currency          String         @default("EUR")
  paymentIntentId   String?        @unique @map("payment_intent_id")
  paymentStatus     PaymentStatus  @default(PENDING)
  shippingAddress   Address        @relation("ShippingAddress", fields: [shippingAddressId], references: [id])
  shippingAddressId String         @unique @map("shipping_address_id")
  billingAddress    Address?       @relation("BillingAddress", fields: [billingAddressId], references: [id])
  billingAddressId  String?        @unique @map("billing_address_id")
  trackingNumber    String?
  shippedAt         DateTime?
  deliveredAt       DateTime?
  notes             String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  items       OrderItem[]
  shipments   Shipment[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([orderNumber])
  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid()) @map("_id")
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  essenceId String
  essence   Essence @relation(fields: [essenceId], references: [id])
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // Price at time of order
  total     Decimal @db.Decimal(10, 2)

  @@index([orderId])
  @@index([essenceId])
  @@map("order_items")
}

model Shipment {
  id            String         @id @default(cuid()) @map("_id")
  orderId       String
  order         Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  trackingNumber String
  carrier       String
  service       String
  status        ShipmentStatus @default(PREPARING)
  shippedAt     DateTime?
  deliveredAt   DateTime?
  estimatedDelivery DateTime?
  shippingLabelUrl String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([orderId])
  @@map("shipments")
}

model Address {
  id        String   @id @default(cuid()) @map("_id")
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  type      AddressType
  line1     String
  line2     String?
  city      String
  state     String?
  postalCode String  @map("postal_code")
  country   String
  isDefault Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shippingOrders Order[] @relation("ShippingAddress")
  billingOrders  Order[] @relation("BillingAddress")

  @@index([userId])
  @@map("addresses")
}

model Vial {
  id        String    @id @default(cuid()) @map("_id")
  userId    String?
  user      User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  sessionId String?   @unique
  items     Json      @default("[]") // Array of VialItem objects
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([sessionId])
  @@index([expiresAt])
  @@map("vials")
}

model RitualPreferences {
  id                String   @id @default(cuid()) @map("_id")
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  hapticsEnabled    Boolean  @default(true)
  audioEnabled      Boolean  @default(true)
  animationsEnabled Boolean  @default(true)
  reducedMotion     Boolean  @default(false)
  preferredHumour   String?
  ritualIntensity   String   @default("medium") // low, medium, high
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("ritual_preferences")
}

model AlchemicalProcess {
  id          String   @id @default(cuid()) @map("_id")
  essenceId   String
  essence     Essence  @relation(fields: [essenceId], references: [id], onDelete: Cascade)
  stepNumber  Int
  title       String
  description String   @db.Text
  duration    String?  // e.g., "2 hours", "24 hours"
  temperature String?  // e.g., "78Â°C"
  pressure    String?  // e.g., "atmospheric"
  equipment   String[] // e.g., ["copper alembic", "condenser"]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([essenceId])
  @@index([stepNumber])
  @@map("alchemical_processes")
}

model ArtisanNote {
  id        String   @id @default(cuid()) @map("_id")
  essenceId String
  essence   Essence  @relation(fields: [essenceId], references: [id], onDelete: Cascade)
  author    String
  note      String   @db.Text
  type      String   @default("general") // general, harvest, distillation, aging
  createdAt DateTime @default(now())

  @@index([essenceId])
  @@map("artisan_notes")
}

model Testimonial {
  id        String   @id @default(cuid()) @map("_id")
  essenceId String
  essence   Essence  @relation(fields: [essenceId], references: [id], onDelete: Cascade)
  author    String
  title     String
  quote     String   @db.Text
  rating    Int      @default(5) // 1-5 stars
  isApproved Boolean @default(false)
  folioEntry String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([essenceId])
  @@index([isApproved])
  @@index([rating])
  @@map("testimonials")
}

model Review {
  id        String   @id @default(cuid()) @map("_id")
  essenceId String
  essence   Essence  @relation(fields: [essenceId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating    Int      // 1-5 stars
  title     String
  comment   String   @db.Text
  isVerifiedPurchase Boolean @default(false)
  isApproved Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([essenceId])
  @@index([userId])
  @@index([rating])
  @@index([isApproved])
  @@map("reviews")
}

model Category {
  id          String            @id @default(cuid()) @map("_id")
  name        String            @unique
  slug        String            @unique
  description String?
  image       String?
  parentId    String?
  parent      Category?         @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[]        @relation("CategoryHierarchy")
  essences    EssenceCategory[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([parentId])
  @@map("categories")
}

model EssenceCategory {
  essenceId  String
  categoryId String
  essence    Category  @relation(fields: [essenceId], references: [id], onDelete: Cascade)
  category   Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([essenceId, categoryId])
  @@index([essenceId])
  @@index([categoryId])
  @@map("essence_categories")
}

model NewsletterSubscriber {
  id        String   @id @default(cuid()) @map("_id")
  email     String   @unique
  isActive  Boolean  @default(true)
  preferences Json?  // JSON object for preferences
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([isActive])
  @@map("newsletter_subscribers")
}

// Enums
enum HumourType {
  CALMING
  INVIGORATING
  UPLIFTING
  BALANCING
  GROUNDING
}

enum RarityType {
  COMMON
  UNCOMMON
  RARE
  LEGENDARY
}

enum SeasonType {
  SPRING
  SUMMER
  AUTUMN
  WINTER
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  REFUNDED
  CANCELLED
}

enum ShipmentStatus {
  PREPARING
  SHIPPED
  IN_TRANSIT
  DELIVERED
  FAILED_DELIVERY
  RETURNED
}

enum AddressType {
  SHIPPING
  BILLING
}
